<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetMatch.SettingsPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout VerticalOptions="Center" Margin="20">
            
            <Entry x:Name="usernameSetting"
            Placeholder="Username"/>

            <Entry x:Name="emailSetting"
            Placeholder="Email"
               Keyboard="Email"/>

            <Entry x:Name="PasswordSetting"
            Placeholder="Password"
            IsPassword="True"/>

                <Picker x:Name="RegisterCityPicker" Title="Select City"/>

                <Entry x:Name="userphonesetting"
            Placeholder="Phone number"/>

            
            <Entry x:Name="petnameSetting"
            Placeholder="Pet Name"/>

                <Picker x:Name="RegisterPetAgePicker" Title="Select Pet Age"/>
                <Picker x:Name="RegisterPetGenderPicker" Title="Select Pet Gender"/>
                <Picker x:Name="RegisterPetBreedPicker" Title="Select Pet Breed"/>
               

                <Button x:Name="SettingsButton"
                Margin="0,10,0,0"
                Text="Change Settings"
                Clicked= "SettingsButton_Clicked"/>



        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>